@model blog.Models.User

@{
    ViewData["Title"] =  Model.UserName + " Düzenleme";
    Layout = "_AdminLayout";
}
<div>
    <form asp-action="userEdit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <label>Adı Soyadı</label>
            <input asp-for="UserName" class="form-control bg-dark text-white" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>E-Posta</label>
            <input asp-for="UserMail" class="form-control bg-dark text-white" />
            <span asp-validation-for="UserMail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Kullanıcı Şifre</label>
            <input asp-for="UserPw" class="form-control bg-dark text-white" />
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a class="btn btn-info" asp-action="users" asp-controller="admin">Kullanıcı Listesi</a>
        </div>
    </form>
</div>