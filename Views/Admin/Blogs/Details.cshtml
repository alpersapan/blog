@model blog.Models.BlogCategoryUser

@{
    ViewData["Title"] = Model.BlogTitle + " İnceleme";
    Layout = "_AdminLayout";
}

<h1 class="text-white">@Model.BlogTitle Detayları</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Yazar</dt>
        <dd class = "col-sm-10">@Model.UserName (id:@Model.UserId)</dd>
        <dt class = "col-sm-2">Kategori</dt>
        <dd class = "col-sm-10">@Model.CategoryName (id:@Model.CategoryId)</dd>
        <dt class = "col-sm-2">Başlık</dt>
        <dd class = "col-sm-10">@Model.BlogTitle</dd>
        <dt class = "col-sm-2">İçerik</dt>
        <dd class = "col-sm-10">@Model.BlogContent</dd>
        <dt class = "col-sm-2">Tarih</dt>
        <dd class = "col-sm-10">@Model.BlogDate</dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="blogEdit" asp-controller="admin" asp-route-id="@Model.BlogId">Düzenle</a>
    <a class="btn btn-info" asp-action="blogs" asp-controller="admin">İçerik Listesi</a>
</div>
