        <h4 class="text-white">@Model.BlogTitle </h4>
    </div>
    <div class="card-body">
        <h6 class="card-title">
        <span class="fa fa-user"></span>&nbsp;@Model.UserName &emsp;
        <span class="fa fa-calendar"></span>&nbsp;@Model.BlogDate &emsp;
        <span class="fa fa-tag"></span>&nbsp;@Model.CategoryName &emsp;
